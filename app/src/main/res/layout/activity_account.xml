<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11.2">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/linearlayoutline"
        android:orientation="horizontal"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tvaccountName2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Account"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="63dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/guideline10">

            <ImageButton
                android:id="@+id/btnedit"
                android:layout_width="11dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="56dp"
                app:srcCompat="@mipmap/arrow" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="18dp"
                android:gravity="right"
                android:text="完善个人资料"
                android:textSize="10sp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/linearlayoutline"
        android:orientation="horizontal"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tvpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="修改登录密码"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="63dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/guideline10">

            <ImageButton
                android:id="@+id/btneditpassword"
                android:layout_width="11dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="56dp"
                app:srcCompat="@mipmap/arrow" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="12dp"
                android:layout_marginBottom="18dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="18dp"
                android:textSize="10sp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/linearlayoutlinewhite"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/linearlayoutline"
        android:orientation="horizontal"
        android:weightSum="3">


        <FrameLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:elevation="1dp"
                android:text="手机"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="63dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="16dp"
                android:text="13888888888" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnbindphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:background="@drawable/textview_border"
                android:text="未认证，现就认证"
                android:textColor="@color/main_red"
                android:textSize="12sp" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/linearlayoutline"
        android:orientation="horizontal"
        android:weightSum="3">


        <FrameLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:elevation="1dp"
                android:text="邮箱"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="63dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/tvmail"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="16dp"
                android:text="未填写" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_weight="1">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="18dp"
                android:gravity="right"
                android:text="现就绑定"
                android:textSize="10sp" />

            <ImageButton
                android:id="@+id/btnbindemail"
                android:layout_width="11dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="56dp"
                app:srcCompat="@mipmap/arrow" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/linearlayoutline"
        android:orientation="horizontal"
        android:weightSum="3">


        <FrameLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:elevation="1dp"
                android:text="银行卡"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="63dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/tvCard"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="16dp"
                android:text="未绑定" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="18dp"
                android:gravity="right"
                android:text="现就绑定"
                android:textSize="10sp" />

            <ImageButton
                android:id="@+id/btnbindcard"
                android:layout_width="11dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="56dp"
                app:srcCompat="@mipmap/arrow" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="上次登入："
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/btnlogout"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_rectangle_with_corners">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"

                android:text="退出登录"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>