<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mina.demoapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="127dp"
        android:layout_height="57dp"
        android:text="凱盛國際"
        android:textSize="30sp"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="132dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/edtlogin1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/edtlogin1"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/edtlogin1"
        tools:layout_editor_absoluteY="146dp" />

    <EditText
        android:id="@+id/edtlogin1"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginStart="33dp"
        android:ems="10"
        android:hint="用戶名"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edtpassword2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/edtpassword2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="169dp"
        android:layout_marginEnd="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginStart="35dp"
        android:ems="10"
        android:hint="密碼"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />



    <ImageView
        android:id="@+id/img1"
        android:layout_width="128dp"
        android:layout_height="132dp"
        app:srcCompat="@drawable/command"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/edtlogin1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/edtlogin1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:layout_marginStart="78dp"
        android:text="登录"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btnsignup2"
        android:layout_marginEnd="79dp"
        app:layout_constraintRight_toRightOf="@+id/edtlogin1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edtpassword2"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="90dp"
        app:layout_constraintLeft_toLeftOf="@+id/edtpassword2"
        android:layout_marginLeft="78dp"
        android:layout_marginRight="79dp"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button6"
        android:layout_width="88dp"
        android:layout_height="0dp"
        android:text="Button"
        app:layout_constraintRight_toRightOf="@+id/edtlogin1"
        app:layout_constraintTop_toTopOf="@+id/edtpassword2"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnlogin"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1" />

    <Button
        android:id="@+id/btnsignup2"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_marginEnd="38dp"
        android:text="新註冊帳戶"
        app:layout_constraintRight_toLeftOf="@+id/btnforget"
        android:layout_marginRight="38dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/edtpassword2"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btnforget"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:layout_marginEnd="35dp"
        android:text="忘記密碼?"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="35dp" />

</android.support.constraint.ConstraintLayout>