<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/linearlayoutline"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="14dp"
            android:text="帐户馀额"
            android:textAlignment="viewEnd"
            android:textColor="@color/debit"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvdebit"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:textColor="@color/debit"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/linearlayoutlinewhite">

            <TextView
                android:id="@+id/textView48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:text="输入提款金额" />

            <EditText
                android:id="@+id/eddebit"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="90dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="6dp"
                android:text="元" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/linearlayoutlinewhite">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="输入登录密码" />

            <EditText
                android:id="@+id/edpassword"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="90dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="6dp"
                android:text="元" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@color/layout_title">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:text="选择收款方式"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="328dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp">

                </FrameLayout>

                <FrameLayout
                    android:layout_width="328dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="25dp">

                </FrameLayout>

                <FrameLayout
                    android:layout_width="328dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="25dp">

                </FrameLayout>
                <Button
                    android:id="@+id/btnsunbmit"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_rectangle_with_corners"
                    android:text="提交"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:layout_marginBottom="45dp"
                    />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>