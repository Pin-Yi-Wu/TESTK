<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        />

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:drawableBottom="@drawable/editline">

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:text="帐号"
            android:textAlignment="viewStart"
            android:textColor="@color/login_hint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/findAccount"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="35dp"
            android:ems="10"
            android:inputType="phone"
            android:textColor="@color/login_hint"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.265"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:background="@drawable/editline" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:drawableBottom="@drawable/editline">

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:text="手机号"
            android:textAlignment="viewStart"
            android:textColor="@color/login_hint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/findPhone"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="45dp"
            android:ems="10"
            android:inputType="phone"
            android:textColor="@color/login_hint"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.265"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:background="@drawable/editline" />

    </FrameLayout>

    <Button
        android:id="@+id/btnsignup2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_rectangle_with_corners"
        android:text="找回密码"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="如果预留手机号无法接收短信或已变更请联系在线客服。"
        android:textAlignment="center"
        android:textColor="@color/password_hint"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="33dp">

            <TextView
                android:id="@+id/textView3"
                style="@android:style/Widget.DeviceDefault.TextView"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/line2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintRight_creator="1" />

            <Button
                android:id="@+id/btnbacklogin2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回登录"
                android:textAlignment="center"
                android:textColor="@color/find_text"
                android:textSize="13sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1" />

            <TextView
                android:id="@+id/textView5"
                style="@android:style/Widget.DeviceDefault.TextView"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/line2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>


</LinearLayout>
